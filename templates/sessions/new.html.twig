{% extends 'base.html.twig' %}

{% block title %}Login to Symfony Blog{% endblock %}

{% block body %}
  <div class="bg-white rounded-xl shadow mx-auto w-80 px-4 py-6">
    <h1 class="text-center">Symfony Blog</h1>

    {% if authenticated %}
      <div class="bg-indigo-100 text-indigo-800 px-4 py-2 rounded-lg mt-8 text-center">You are already authenticated.</div>
    {% else %}
      <form action="/login" method="POST">
        <div class="sb-formcontrol">
          <label for="email" class="sb-label">E-Mail</label>
          <input type="email" name="email" autocomplete="email" autofocus class="sb-input">
        </div>

        <div class="sb-formcontrol">
          <label for="password" class="sb-label">Passwort</label>
          <input type="password" name="password" autocomplete="password" class="sb-input">
        </div>

        <div class="text-center mt-8">
          <button class="sb-btn">Anmelden</button>
        </div>
      </form>
    {% endif %}

  </div>
{% endblock %}
